{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./lib/",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": ["dom", "es7"],
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "downlevelIteration": true
  },
  "include": ["./src/**/*", "__tests__/**/*"]
}
